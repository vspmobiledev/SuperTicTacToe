<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="BasicButton">
   	    <item name="android:layout_width">100dip</item>
   	    <item name="android:layout_height">40dip</item>
   	    <!--<item name="android:background">@drawable/basic_button</item>-->
   	    <item name="android:textColor">@color/black</item>
   	    <item name="android:textSize">14dip</item>
   	    <item name="android:padding">10dip</item>
   	    <item name="android:layout_gravity">center</item>
	    <item name="android:shadowColor">@color/black</item>
		<item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">1</item>
   	</style>
    
    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
    </style>
    
    <style name="Text.Large">
    	<item name="android:textSize">20dip</item>
    </style>
    
</resources>